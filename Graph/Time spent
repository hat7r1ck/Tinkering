import matplotlib.pyplot as plt

# Define the data for each time frame
categories = ['Weekly', 'Monthly', 'Annual']
total_case_times = [69, 276.3, 3591.5]  # Total case time in hours for weekly, monthly, and annual
enrichment_case_times = [12.7, 50.9, 661.3]  # Enrichment case time in hours for the same periods

# Set up the bar chart parameters
plt.figure(figsize=(10, 6))
bar_width = 0.35
index = range(len(categories))

# Plot total case time and enrichment case time side-by-side
plt.bar(index, total_case_times, bar_width, label='Total Case Time (hours)')
plt.bar([i + bar_width for i in index], enrichment_case_times, bar_width, label='Enrichment Case Time (hours)')

# Add labels and title
plt.xlabel('Time Frame', fontsize=12)
plt.ylabel('Time in Hours', fontsize=12)
plt.title('Time Spent on XSOAR Cases (Weekly, Monthly, Annual)', fontsize=14)
plt.xticks([i + bar_width / 2 for i in index], categories)
plt.legend()

# Display the plot
plt.tight_layout()
plt.show()
